---
import Icon from "astro-icon";

const links = [
    {
        label: "our projects",
        link: "/",
    },
    {
        label: "services",
        link: "/",
    },
    {
        label: "stages of worK",
        link: "/",
    },
    {
        label: "order a video",
        link: "/",
    },
];
---

<div class="wrapper" id="menu-wrapper">
    <div class="container">
        <button id="menu-close">
            <Icon name="close" />
        </button>
        <div class="links">
            {
                links.map((link) => (
                    <div class="link">
                        <span class="slash">// </span>
                        <div class="link-mask">
                            <a href={link.link}>{link.label}</a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    .wrapper {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: rgba(20, 20, 20, 1);
        z-index: 99;
    }

    .container {
        display: flex;
        justify-content: center;
        height: 100%;
        position: relative;
    }

    .links {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 130px;
    }

    .links:hover .link-mask {
        overflow: visible;
    }

    .link {
        text-align: center;
        font-family: "ActayWide";
        font-size: 56px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
    }
    .link:hover a {
        transform: translateX(50px);
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .link a {
        text-decoration: none;
        display: inline-block;
        color: #fff;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        padding: 20px 0;
    }

    .link .slash {
        color: #593fbf;
        margin-right: 10px;
    }

    .link-mask {
        overflow: hidden;
    }

    #menu-close {
        border: none;
        display: inline;
        background: transparent;
        position: absolute;
        width: 64px;
        height: 64px;
        left: 0;
        cursor: pointer;
        margin-top: 80px;
    }

    .link-mask {
        animation: maskin 3s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .link:nth-child(1) a {
        animation-delay: 0.2s;
    }
    .link:nth-child(2) a {
        animation-delay: 0.4s;
    }
    .link:nth-child(3) a {
        animation-delay: 0.6s;
    }
    .link:nth-child(4) a {
        animation-delay: 0.8s;
    }

    @keyframes maskin {
        0% {
            transform: translateX(-1000px);
        }
        100% {
            transform: translateX(0);
        }
    }
</style>

<script>
    let isModalOpen = true;
    const closeIcon = document.querySelector("#menu-close");

    const handleMenuWrapperClick = () => {
        const menu = document.querySelector("#menu-wrapper");
        const isVisible =
            menu?.getAttribute("visible") === "true" ? true : false;
        console.log(isVisible);
        menu?.setAttribute("visible", isVisible ? "false" : "true");
    };
    closeIcon?.addEventListener("click", handleMenuWrapperClick);
</script>
