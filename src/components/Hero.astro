---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import logo from "../icons/logo.svg";
import Menu from "./Menu.astro";
---

<Menu />
<div class="fluid">
    <div class="container">
        <header>
            <div class="left">
                <button type="button" class="menu-btn" id="menu-btn"
                    >Menu</button
                >
            </div>
            <div class="center">
                <Image src={logo} alt="ARTLUMIA" />
            </div>
            <div class="right">
                <a href="" target="_blank">
                    <Icon name="inst" class="social" />
                </a>
                <a href="" target="_blank">
                    <Icon name="vimeo" class="social" />
                </a>
                <a href="" target="_blank">
                    <Icon name="linkedin" class="social" />
                </a>
            </div>
        </header>
        <div class="content">
            <div class="title">
                <div class="line"></div>
                <Icon name="hero-title" class="hero-title" />
                <Icon name="hero-title-sm" class="hero-title-sm" />
            </div>
            <button class="order" type="button">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="241"
                    height="241"
                    viewBox="0 0 241 241"
                    fill="none"
                >
                    <circle
                        cx="120.5"
                        cy="120.5"
                        r="119.5"
                        stroke="white"
                        stroke-width="2"
                        stroke-dasharray="14 14"></circle>
                </svg>
                <div>Order a video</div>
            </button>
        </div>
    </div>
    <video id="background-video" autoplay loop muted poster="/videos/hero.mp4">
        <source src="/videos/hero.mp4" type="video/mp4" />
    </video>
</div>

<style>
    .fluid {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        color: white;
        padding-top: 40px;
        position: relative;
    }

    .fluid .container {
        min-height: calc(100vh - 188px);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .fluid video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .menu-btn {
        text-transform: uppercase;
        border: none;
        background: transparent;
        font-family: Poppins;
        font-size: 14px;
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 9px 30px;
        cursor: pointer;
    }

    .logo {
        width: 141px;
        height: 27px;
    }

    .center {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social {
        width: 24px;
        height: 24px;
    }

    .right {
        display: flex;
        gap: 20px;
    }

    .content {
        width: 100%;
        display: grid;
        grid-template-columns: 70% 1fr;
        margin-bottom: 140px;
    }

    .content .line {
        max-width: 273px;
        width: 100%;
        background: #fff;
        height: 1px;
        margin-bottom: 30px;
    }

    .order {
        margin-left: auto;
        z-index: 3;
        position: relative;
        width: 241px;
        height: 241px;
        border-radius: 100%;
        overflow: hidden;
        cursor: pointer;
        border: none;
        background: transparent;
        border: none;
        border-radius: 100%;
        padding: 0;
        font-family: Poppins;
        font-weight: 700;
        color: #fff;
        transition: background 0.1s ease;
        background: transparent;
        z-index: 2;
    }

    .order svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        transition: all 0.1s;
        border-radius: 100%;
    }

    .order svg circle {
        stroke: white;
        stroke-width: 2;
        stroke-dasharray: 14 14;
        fill: none;
        transition: all 0.3s;
    }

    .order:focus svg circle,
    .order:hover svg circle {
        stroke-dasharray: 80 0;
        transition: all 0.3s;
    }
    .order:hover {
        background: rgba(255, 255, 255, 0.13);
    }

    .order:focus {
        background: rgba(147, 138, 255, 0.2);
        transition: all 0.3s;
    }
    .order:focus svg {
        opacity: 0.2;
    }

    .hero-title-sm {
        display: none;
    }

    @media screen and (max-width: 450px) {
        .content {
            grid-template-columns: 1fr;
            margin-bottom: 25px;
        }
        .order {
            width: 146px;
            height: 146px;
        }
        .content .line {
            max-width: 174px;
        }
        .hero-title {
            display: none;
        }
        .hero-title-sm {
            display: block;
        }
        header .right {
            display: none;
        }
        header {
            flex-direction: row-reverse;
        }
    }
</style>
